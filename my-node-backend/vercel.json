{
    "version": 2,
    "builds": [
      { "src": "api/**/*.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/data", "methods": ["GET"], "dest": "/api/data.js" },
      { "src": "/api/motor/speed", "methods": ["POST"], "dest": "/api/motor/speed.js" },
      { "src": "/api/battery/charging", "methods": ["POST"], "dest": "/api/battery/charging.js" },
      { "src": "/api/emulate-data", "methods": ["POST"], "dest": "/api/emulate-data.js" }
    ]
  }
  